<div class="col-md-* single-beer-card">
  <div class="card flex-row">
    <img src="{{this.image_url}}" class="card-img-top" alt="{{this.name}}">
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">{{this.description}}</p>
      <p class="card-text"><small class="text-muted">{{this.tagline}}</small></p>
    
      {{!-- <p class="card-text">{{this.food_pairing}}</p> --}}
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

      <p class="card-text">{{this.brewers_tips}}</p>


    </div>
  </div>

</div>


